pipeline
{
    agent 
	{
        node 
		{
            label 'slave-azure' 
        }
    }

    stages
	{
		stage ('HelloWorld') 
		{
			agent
			{
			  docker { image 'jtoledog/compiladorjs' }
			}
			steps
			{
				echo "'Hello World'"
			}
			post
			{
				success
				{
					echo 'Se ha saludado correctamente'
				}
				failure
				{
					echo 'Se ha producido error en el saludo :D'
				}
			}
		}

    }
}
